{
  "private": true,
  "workspaces": [
    "packages/*",
    "demos/*",
    "website"
  ],
  "scripts": {
    "changeset": "changeset",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "turbo run deploy && gh-pages -d website/build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "eslint": "^7.32.0",
    "eslint-config-xbell": "workspace:*",
    "gh-pages": "^4.0.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  }
}