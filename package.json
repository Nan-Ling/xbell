{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "tests/*",
    "website"
  ],
  "scripts": {
    "changeset": "changeset",
    "website": "cd website && pnpm start",
    "website:zh": "cd website && pnpm start:zh",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "turbo run deploy && gh-pages -d website/build"
  },
  "devDependencies": {
    "xbell": "workspace:*",
    "@changesets/cli": "^2.25.2",
    "eslint": "^7.32.0",
    "gh-pages": "^4.0.0",
    "prettier": "^2.5.1",
    "turbo": "1.5.5",
    "fast-glob": "^3.2.11",
    "typescript": "^4.6.4",
    "@types/node": "^18.7.18",
    "@swc/core": "1.2.208"
  }
}
